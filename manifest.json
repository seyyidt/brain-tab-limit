{
  "manifest_version": 3,
  "name": "Brain Tab Limiter",
  "version": "1.0",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo16.png",
      "32": "logo48.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  }
}

